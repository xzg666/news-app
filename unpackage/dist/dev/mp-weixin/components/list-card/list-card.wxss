.listcard {
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  box-shadow: 0 0 5px 1px rgba(0, 0, 0, 0.1);
  margin: 10px;
}
.listcard.listcard-base {
  padding: 5px 10px;
}
.listcard .listcard-img image {
  width: 65px;
  height: 65px;
  border-radius: 5px;
  overflow: hidden;
}
.listcard .listcard-content {
  padding: 2px 0px 0 20px;
  display: flex;
  flex-direction: column;
  width: 100%;
  align-content: space-between;
}
.listcard .listcard-content .listcard-content-title {
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 8px;
  padding-right: 24px;
  box-sizing: border-box;
}
.listcard .listcard-content .listcard-content-des {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.listcard .listcard-content .listcard-content-des .listcard-content-des-label {
  font-size: 14px;
  color: #f07373;
  padding: 0 2px;
  box-sizing: border-box;
  border: #f07373 1px solid;
  border-radius: 5px;
}
.listcard .listcard-content .listcard-content-des .listcard-content-des-brow {
  font-size: 14px;
  color: #333;
}
.listcard.mode-column .listcard-content {
  padding: 5px 10px;
}
.listcard.mode-column .listcard-content .listcard-img {
  display: flex;
  justify-content: space-around;
}
.listcard.mode-column .listcard-content .listcard-img .listcard-img-item {
  flex: 1;
}
.listcard.mode-column .listcard-content .listcard-img .listcard-img-item image {
  width: 98%;
}
.listcard.mode-img .listcard-content {
  padding: 5px 10px;
}
.listcard.mode-img .listcard-content .listcard-img image {
  width: 100%;
  height: 80px;
}

