.detail {
  padding: 15px 0;
  padding-bottom: 54px;
}
.detail .detail-title {
  padding: 0 15px;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}
.detail .detail-header {
  display: flex;
  padding: 0 15px;
  box-sizing: border-box;
}
.detail .detail-header .detail-header__logo {
  width: 40px;
  height: 40px;
}
.detail .detail-header .detail-header__logo image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.detail .detail-header .detail-header__content {
  padding-left: 10px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.detail .detail-header .detail-header__content .detail-header__content-title {
  font-size: 14px;
  color: #333;
}
.detail .detail-header .detail-header__content .detail-header__content-info {
  color: #999;
  flex-grow: 0;
  font-size: 12px;
}
.detail .detail-header .detail-header__content .detail-header__content-info text {
  margin-right: 4px;
}
.detail .detail-header .detail-header__button {
  height: 30px;
  font-size: 12px;
  color: #fff;
  padding: 2px 5px;
  box-sizing: border-box;
  background-color: #f07373;
}
.detail .detail-info {
  margin-top: 20px;
  min-height: 500px;
}
.detail .detail-info .detail-html {
  padding: 0 15px;
}
.detail .detail-info .detail-comment {
  padding: 10px;
  box-sizing: border-box;
}
.detail .detail-bottom {
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 44px;
  border-top: 1px #f5f5f5 solid;
  background-color: #fff;
}
.detail .detail-bottom .detail-bottom__input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 10px;
  width: 100%;
  height: 30px;
  border: 1px #ddd solid;
  border-radius: 5px;
}
.detail .detail-bottom .detail-bottom__input text {
  font-size: 14px;
  color: #999;
}
.detail .detail-bottom .detail-bottom__icons {
  display: flex;
  padding: 0 10px;
}
.detail .detail-bottom .detail-bottom__icons .detail-bottom__icons-box {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 44px;
}

