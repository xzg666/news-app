.my .my-header .my-header-logo .my-header-logo-box {
  text-align: center;
}
.my .my-header .my-header-logo .my-header-logo-box image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}
.my .my-header .my-header-info {
  display: flex;
  width: 80%;
}
.my .my-header .my-header-info .my-header-info-box {
  flex: 1;
